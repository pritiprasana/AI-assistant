{
  "name": "slot-assistant",
  "displayName": "Slot Game Assistant",
  "description": "AI-powered coding assistant for slot game framework",
  "version": "0.1.0",
  "publisher": "local-dev",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:slot-assistant.chatView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "slot-assistant.ask",
        "title": "Ask Slot Assistant"
      },
      {
        "command": "slot-assistant.explain",
        "title": "Slot Assistant: Explain Selection"
      },
      {
        "command": "slot-assistant.setApiUrl",
        "title": "Slot Assistant: Set API URL"
      },
      {
        "command": "slot-assistant.openChat",
        "title": "Slot Assistant: Open Chat",
        "icon": "$(comment-discussion)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "slot-assistant",
          "title": "Slot Assistant",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "slot-assistant": [
        {
          "type": "webview",
          "id": "slot-assistant.chatView",
          "name": "Chat"
        }
      ]
    },
    "configuration": {
      "title": "Slot Assistant",
      "properties": {
        "slot-assistant.apiUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "URL of the local Slot Assistant API server"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "slot-assistant.explain",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@types/mocha": "^10.0.6",
    "mocha": "^10.2.0"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}